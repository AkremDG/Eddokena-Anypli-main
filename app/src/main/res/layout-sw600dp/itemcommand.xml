<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/commande_articlenom_tv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/textviewshape"
            android:fontFamily="@font/muli_light"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="Randa 1/2 Kg"
            android:textStyle="bold"
            android:autoSizeTextType="uniform"/>

        <TextView
            android:id="@+id/commande__articlecondition_tv"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:fontFamily="@font/muli_light"
            android:background="@drawable/textviewshape"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="Piece"
            android:textStyle="bold"
            android:autoSizeTextType="uniform"/>

        <EditText
            android:id="@+id/commande_articlequantite_et"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:fontFamily="@font/muli_light"
            android:gravity="center"
            android:padding="4dp"
            android:background="@drawable/textviewshape"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:autoSizeTextType="uniform"
            android:ems="10"
            android:inputType="numberDecimal"
            android:imeOptions="actionDone"/>

        <TextView
            android:id="@+id/commande_articlequantite_tv"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:background="@drawable/textviewshape"
            android:fontFamily="@font/muli_light"
            android:gravity="center"
            android:padding="5dp"
            android:text="15"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:autoSizeTextType="uniform"/>

        <TextView
            android:id="@+id/commande_articleprix_tv"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:background="@drawable/textviewshape"
            android:fontFamily="@font/muli_light"
            android:gravity="center"
            android:padding="5dp"
            android:text="34,750 TND"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/commande_articletotalprix_tv"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="0.5"
            android:background="@drawable/textviewshape"
            android:fontFamily="@font/muli_light"
            android:gravity="center"
            android:padding="5dp"
            android:text="34,750 TND"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:autoSizeTextType="uniform" />

        <ImageView
            android:id="@+id/commande_articledeleteitem_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:foreground="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/icongarbeg" />

    </LinearLayout>

</androidx.cardview.widget.CardView>