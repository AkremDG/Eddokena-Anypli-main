<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context="com.digid.eddokenaCM.Menu.CatalogueClient.ClientCoFragment"
    android:focusableInTouchMode="true">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h20Gl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v30Gl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <LinearLayout
        android:id="@+id/imageView9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="#1a237e"
        app:layout_constraintBottom_toTopOf="@+id/h20Gl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/clientco_back_iv"
        android:layout_width="70dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:srcCompat="@drawable/iconback"
        app:layout_constraintStart_toStartOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/clientco_search_sv"
        android:layout_width="367dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/searchviewshape"
        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView9">

    </androidx.appcompat.widget.SearchView>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="192dp"
        android:layout_height="82dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:srcCompat="@drawable/diglogowhite"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="parent" />

    <com.digid.eddokenaCM.Utils.RegionMultiSpinner
        android:id="@+id/clientco_region_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/v30Gl"
        app:layout_constraintStart_toStartOf="@+id/v30Gl"
        app:layout_constraintTop_toTopOf="@+id/h20Gl" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/clientco_clients_rv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/layout_shape"
        android:padding="15dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toStartOf="@+id/v30Gl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clientco_region_spinner"
        tools:listitem="@layout/itemclient" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/layout_shape"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/v30Gl"
        app:layout_constraintTop_toBottomOf="@+id/clientco_region_spinner">


        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/sellectedtextview_shape"
            android:fontFamily="@font/muli_light"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:shadowColor="@color/black"
            android:text="Details"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/clientco_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/muli_light"
            android:gravity="center"
            android:shadowColor="@color/black"
            android:text="Nom"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:autoSizeTextType="uniform" />

        <TextView

            android:id="@+id/clientco_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/muli_light"
            android:gravity="center"
            android:shadowColor="@color/black"
            android:text="Num :  "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:autoSizeTextType="uniform" />


        <TextView

            android:id="@+id/clientco_matfisc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/muli_light"
            android:gravity="center"
            android:shadowColor="@color/black"
            android:text="Email : "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/clientco_adrLiv_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/muli_light"
            android:gravity="center"
            android:shadowColor="@color/black"
            android:text="Adresse :"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:autoSizeTextType="uniform"  />

        <TextView
            android:id="@+id/clientco_chiff_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/muli_light"
            android:gravity="center"
            android:shadowColor="@color/black"
            android:text="Chiffre d'affaire :  "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:autoSizeTextType="uniform"  />

   

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/clientco_call_ibtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/iconcall"
                android:foreground="?android:attr/selectableItemBackground" />

            <ImageButton
                android:id="@+id/clientco_location_ibtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/iconmap"
                android:foreground="?android:attr/selectableItemBackground" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/clientco_navarticle_iv"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@drawable/shadow_rect2"
            android:foreground="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/iconarticle" />

        <ImageView
            android:id="@+id/clientco_navcommande_iv"
            android:layout_width="125dp"
            android:layout_height="55dp"
            android:paddingTop="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:background="@drawable/shadow_rect2"
            android:foreground="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/iconsshopp" />

        <ImageView
            android:id="@+id/clientco_navclient_iv"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/iconclient"
            android:background="@drawable/button_shape" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>