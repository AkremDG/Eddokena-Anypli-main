<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context="com.digid.eddokena.Menu.MenuCoFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h20Gl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h50Gl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h80Gl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v25Gl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v50Gl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v75Gl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#1a237e"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/h20Gl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.554"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="192dp"
        android:layout_height="82dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/diglogowhite"
        app:layout_constraintStart_toStartOf="@+id/linearLayout4"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/menuco_logout_btn"
        android:layout_width="45dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        app:srcCompat="@drawable/logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/menuCouserName_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_weight="1"
        android:fontFamily="@font/muli_light"
        android:gravity="start|center_horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:background="@drawable/textviexshape_5"
        app:layout_constraintEnd_toStartOf="@+id/menuco_logout_btn"
        app:layout_constraintStart_toStartOf="@+id/guideline10"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/menuCo_stat_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:background="@drawable/layout_shape"
        android:outlineSpotShadowColor="@color/black"
        app:cardElevation="1dp"
        app:cardCornerRadius="20dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toTopOf="@+id/h80Gl"
        app:layout_constraintEnd_toStartOf="@+id/v75Gl"
        app:layout_constraintStart_toStartOf="@+id/v50Gl"
        app:layout_constraintTop_toTopOf="@+id/h50Gl">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/layout_shape"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/statimage"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/iconstat" />

            <TextView
                android:id="@+id/stattext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:fontFamily="@font/muli_light"
                android:gravity="center"
                android:text="Statistique"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/menuCo_client_btn"
        android:layout_width="0dp"

        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:background="@drawable/layout_shape"
        android:outlineSpotShadowColor="@color/black"
        app:cardElevation="1dp"
        app:cardCornerRadius="20dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toTopOf="@+id/h50Gl"
        app:layout_constraintEnd_toStartOf="@+id/v75Gl"
        app:layout_constraintStart_toStartOf="@+id/v50Gl"
        app:layout_constraintTop_toTopOf="@+id/h20Gl">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"

            android:background="@drawable/layout_shape"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView

                android:id="@+id/clientimage"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/iconclient" />

            <TextView
                android:id="@+id/clienttext"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:fontFamily="@font/muli_light"
                android:gravity="center"
                android:text="Clients"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/menuCo_hist_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:background="@drawable/layout_shape"
        android:outlineSpotShadowColor="@color/black"
        app:cardElevation="1dp"
        app:cardCornerRadius="20dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toTopOf="@+id/h80Gl"
        app:layout_constraintEnd_toStartOf="@+id/v50Gl"
        app:layout_constraintStart_toStartOf="@+id/v25Gl"
        app:layout_constraintTop_toTopOf="@+id/h50Gl">

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/layout_shape"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/histimage"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/iconshist" />

            <TextView
                android:id="@+id/histtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:fontFamily="@font/muli_light"
                android:gravity="center"
                android:text="Historique"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/menuCo_art_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:background="@drawable/layout_shape"
        app:cardElevation="1dp"
        app:cardCornerRadius="20dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toTopOf="@+id/h50Gl"
        app:layout_constraintEnd_toStartOf="@+id/v50Gl"
        app:layout_constraintStart_toStartOf="@+id/v25Gl"
        app:layout_constraintTop_toTopOf="@+id/h20Gl">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/layout_shape"
            android:gravity="center"


            android:orientation="vertical">

            <ImageView
                android:id="@+id/artimage"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/iconarticle" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:fontFamily="@font/muli_light"
                android:gravity="center"
                android:text="Catalogue \n Article"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/menuCo_comm_btn"
        android:layout_width="215dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/menu_button_shape"
        android:orientation="horizontal"
        android:textColorLink="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/v75Gl"
        app:layout_constraintHorizontal_bias="0.548"
        app:layout_constraintStart_toStartOf="@+id/v25Gl"
        app:layout_constraintTop_toTopOf="@+id/h80Gl"
        app:layout_constraintVertical_bias="0.09">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/muli_light"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="Commander"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="44dp"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            app:srcCompat="@drawable/iconsshopp" />


    </LinearLayout>

    <ImageView
        android:id="@+id/menuCo_promo_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        app:srcCompat="@drawable/iconpromo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/h20Gl" />

    <TextView
        android:id="@+id/menuCo_nombrepromo_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="18dp"
        android:fontFamily="@font/muli_light"
        android:gravity="center"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuCo_promo_iv" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/menuco_sync_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#f44336"
        android:clickable="true"
        android:contentDescription="Actualiser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/h80Gl"
        app:srcCompat="@drawable/ic_baseline_cloud_sync_24"
        app:strokeColor="#f44336" />


</androidx.constraintlayout.widget.ConstraintLayout>