<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/commande_articlenom_tv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/textviewshape"
            android:fontFamily="@font/muli_light"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="Randa 1/2 Kg"
            android:textStyle="bold"
            android:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/commande_articlearref_tv"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:background="@drawable/textviewshape"
            android:fontFamily="@font/muli_light"
            android:gravity="center"
            android:padding="5dp"
            android:text="34,750 TND"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/commande__articleqte_tv"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:background="@drawable/textviewshape"
            android:fontFamily="@font/muli_light"
            android:gravity="center"
            android:padding="5dp"
            android:text="Piece"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/commande_articlePrixPiece_tv"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:background="@drawable/textviewshape"
            android:fontFamily="@font/muli_light"
            android:gravity="center"
            android:padding="5dp"
            android:text="15"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:autoSizeTextType="uniform"/>

        <TextView
            android:id="@+id/commande_articlePrixtotal_tv"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:fontFamily="@font/muli_light"
            android:gravity="center"
            android:padding="5dp"
            android:text="15"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:autoSizeTextType="uniform"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>