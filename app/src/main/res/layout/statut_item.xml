<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">


    <TextView


        android:id="@+id/status_color_tv"
        android:layout_width="5dp"
        app:layout_constraintTop_toTopOf="@+id/status_text_tv"
        app:layout_constraintBottom_toBottomOf="@+id/status_text_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/colorPrimary"
        android:layout_height="0dp" />


    <TextView
        android:id="@+id/status_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="confirmed"
        app:layout_constraintStart_toEndOf="@+id/status_color_tv"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18sp"
        android:paddingVertical="2dp"
        android:layout_marginLeft="5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>