<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">

    <LinearLayout

        android:id="@+id/articleco_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="#FFF">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/articlecomimage_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:src="@drawable/iconempty" />

            <TextView
                android:id="@+id/comarticlecomprix_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/muli_light"
                android:gravity="center"
                android:padding="2dp"
                android:text="0,5 TND"
                android:textSize="10sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/comarticlecomname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/muli_light"
                android:gravity="center"
                android:padding="2dp"
                android:text="Randa"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/comarticledispo_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/muli_light"
                android:gravity="center"
                android:padding="2dp"
                android:text="Disponible"
                android:textColor="@color/black"
                android:textSize="10sp" />

        </LinearLayout>

        <com.digid.eddokenaCM.Utils.VerticalTextView
            android:id="@+id/articlepromo_tv"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/muli_light"
            android:gravity="center"
            android:text="En Promotion"
            android:textSize="12sp"/>
    </LinearLayout>


</androidx.cardview.widget.CardView>