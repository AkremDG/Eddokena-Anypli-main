<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/commande_articlenom_tv"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/textviewshape"
                android:fontFamily="@font/muli_light"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:textColor="@color/black"
                android:text="Randa 1/2 Kg"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/commande__articlecondition_tv"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:fontFamily="@font/muli_light"
                android:background="@drawable/textviewshape"
                android:gravity="center"
                android:padding="2dp"
                android:textColor="@color/black"
                android:text="Piece"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/commande_articlequantite_tv"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:background="@drawable/textviewshape"
                android:fontFamily="@font/muli_light"
                android:gravity="center"
                android:padding="2dp"
                android:text="15"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/commande_articleprix_tv"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:background="@drawable/textviewshape"
                android:fontFamily="@font/muli_light"
                android:gravity="center"
                android:padding="2dp"
                android:text="34,750 TND"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/commande_articletotalprix_tv"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:layout_weight="0.5"
                android:background="@drawable/textviewshape"
                android:fontFamily="@font/muli_light"
                android:gravity="center"
                android:padding="2dp"
                android:text="34,750 TND"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/commande_articledeleteitem_iv"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:srcCompat="@drawable/icongarbeg" />

        </LinearLayout>

</androidx.cardview.widget.CardView>